@model IEnumerable<KUASCYCLAB.Models.Product>

@{
    ViewBag.Title = "商品資訊";
}

<h2>商品資訊</h2>

<p>
    @Html.ActionLink("新增", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductSpecifications)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductUnit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductSpecifications)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductUnit)
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id=item.ProductID }) |
