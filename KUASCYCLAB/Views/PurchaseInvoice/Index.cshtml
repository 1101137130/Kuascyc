@model IEnumerable<KUASCYCLAB.Models.PurchaseInvoice>

@{
    ViewBag.Title = "檢索";
}

<h2>檢索</h2>

<p>
    <button id="create" type="button" class="btn btn-group-vertical" onclick="location.href = '@Url.Action("Create")'; return false;"> <span class="glyphicon glyphicon-plus"></span></button>
</p>
<div style=" overflow:auto;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VATcharges)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchasingDepartmentEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountingDepartmentEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase.PurchaseAmount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VATcharges)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchasingDepartmentEmployee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountingDepartmentEmployee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Purchase.PurchaseAmount)
                </td>
                <td>
                    <button id="edit" type="button" class="btn btn-group-vertical" onclick="location.href = '@Url.Action("Edit",new { id = item.PurchaseInvoiceID })'; return false;">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                    <button id="edit" type="button" class="btn btn-group-vertical" onclick="location.href = '@Url.Action("Details",new { id = item.PurchaseInvoiceID })'; return false;">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                    <button id="edit" type="button" class="btn btn-group-vertical" onclick="location.href = '@Url.Action("Delete",new { id = item.PurchaseInvoiceID })'; return false;">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                </td>
            </tr>
        }

    </table>
    </div>