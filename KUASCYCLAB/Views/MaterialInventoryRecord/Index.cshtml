                    @Html.DisplayFor(modelItem => item.Supplier1.SupplierName)
                </td>
                <td>
                    <button id="edit" type="button" class="btn btn-group-vertical" onclick="location.href = '@Url.Action("Edit",new { id = item.MaterialInventoryRecordID })'; return false;">
