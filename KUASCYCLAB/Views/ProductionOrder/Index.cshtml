            <th>
                @Html.DisplayNameFor(model => model.TotalQuantityProduction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CangguanApplyEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductionProcessingEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BOMList.MaterialName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartProductionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Closingdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionProductSpecifications)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityProduction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalQuantityProduction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CangguanApplyEmployee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionProcessingEmployee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BOMList.MaterialName)
                </td>
                <td>
                    <button id="edit" type="button" class="btn btn-group-vertical" onclick="location.href = '@Url.Action("Edit",new { id = item.ProductionOrderID })'; return false;">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                    <button id="edit" type="button" class="btn btn-group-vertical" onclick="location.href = '@Url.Action("Details",new { id = item.ProductionOrderID })'; return false;">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                    <button id="edit" type="button" class="btn btn-group-vertical" onclick="location.href = '@Url.Action("Delete",new { id = item.ProductionOrderID })'; return false;">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>

                </td>
            </tr>
        }

    </table>
    </div>